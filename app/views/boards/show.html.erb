<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

  </div>
</div>

<div style="color:green;"><%= notice %></div>
<div style="color:red;"><%= alert %></div>

<hr>

<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="expires_on_box">
          Expires on
        </label>

        <input type="date" id="expires_on_box" name="query_expires_on">
      </div>

      <input type="hidden" id="board_id_box" name="query_board_id" value="<%= params.fetch("path_id") %>">

      <button>
        Add post
      </button>
    </form>
  </div>
</div>

<hr>

<div>
  <h2>Active posts</h2>
  <div>
    <table border="1">
      <tr>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Posted on
        </th>

        <th>
          Expires on
        </th>

      </tr>

      <% @list_of_board_posts.active.each do |a_post| %>
        <tr>

          <td>
            <%= a_post.title %>
          </td>

          <td>
            <%= a_post.body %>
          </td>

          <td>
            <%= a_post.created_at %>
          </td>

          <td>
            <%= a_post.expires_on %>
          </td>

        </tr>
      <% end %>
    </table>
  </div>
</div>

<div>
  <h2>Expired posts</h2>
  <div>
    <table border="1">
      <tr>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Posted on
        </th>

        <th>
          Expired on
        </th>

      </tr>

      <% @list_of_board_posts.expired.each do |a_post| %>
        <tr>

          <td>
            <%= a_post.title %>
          </td>

          <td>
            <%= a_post.body %>
          </td>

          <td>
            <%= a_post.created_at %>
          </td>

          <td>
            <%= a_post.expires_on %>
          </td>

        </tr>
      <% end %>
    </table>
  </div>
</div>
